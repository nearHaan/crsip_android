<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/content_padding">

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="20dp"
        android:clipToOutline="true">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/blue">

            <TextView
                android:id="@+id/tv_date_w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29-06-2025"
                style="@style/MediumTextStyle"/>
            <TextView
                android:id="@+id/tv_day_w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tuesday"
                style="@style/SmallTextStyle"
                android:layout_marginVertical="@dimen/content_padding"/>
            <TextView
                android:id="@+id/tv_time_w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:30am"
                style="@style/MediumTextStyle"/>
            <ImageView
                android:id="@+id/iv_weatherRes_w"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="@dimen/content_padding"
                android:src="@drawable/org_logo"/>
            <TextView
                android:id="@+id/tv_weather_w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light Rain"
                style="@style/SmallTextStyle"/>
            <TextView
                android:id="@+id/tv_temp_w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29Â°C"
                style="@style/MediumTextStyle"
                android:layout_marginVertical="@dimen/content_padding"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_water_drop_24"
                app:tint="@color/white" />
            <TextView
                android:id="@+id/tv_prec_w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="73%"
                style="@style/SmallTextStyle"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>