<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LogoTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/nedo_regular</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="WeatherTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontWeight">700</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="MediumTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:fontWeight">700</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="MediumTextBoldStyle">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:fontWeight">700</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="SmallTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="LoginEditTextStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="textInputStyle">@style/SmallTextStyle</item>
    </style>
    <style name="LoginButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@color/app_yellow</item>
    </style>
</resources>